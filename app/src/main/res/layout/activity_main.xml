        android:layout_marginStart="167dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/canadaflaga"
        app:layout_constraintStart_toStartOf="@id/cad"
        app:layout_constraintTop_toTopOf="@id/cad" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/szwajcariaflaga"
        app:layout_constraintStart_toStartOf="@id/chf"
        app:layout_constraintTop_toTopOf="@id/chf" />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/brytaniaflaga"
