        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/uniaflaga"
        app:layout_constraintStart_toStartOf="@id/eur"
        app:layout_constraintTop_toTopOf="@id/eur" />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/usflaga"
        app:layout_constraintStart_toStartOf="@id/eur"
        app:layout_constraintTop_toTopOf="@id/eur" />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/usflaga"
        app:layout_constraintStart_toStartOf="@id/jpy"
        app:layout_constraintTop_toTopOf="@id/jpy" />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/usflaga"
        app:layout_constraintStart_toStartOf="@id/chf"
        app:layout_constraintTop_toTopOf="@id/chf" />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/usflaga"
        app:layout_constraintStart_toStartOf="@id/cad"
        app:layout_constraintTop_toTopOf="@id/cad" />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/usflaga"
        app:layout_constraintStart_toStartOf="@id/gbp"
        app:layout_constraintTop_toTopOf="@id/gbp" />
